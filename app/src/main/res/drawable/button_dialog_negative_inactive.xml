<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <corners
                android:bottomRightRadius="2dp"/>
            <gradient
                android:startColor="@color/middleGradient"
                android:endColor="@color/redGradient"/>
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="1dp"
        android:right="2dp">
        <shape
            android:shape="rectangle">
            <corners
                android:bottomRightRadius="2dp" />
            <solid
                android:color="?attr/colorPrimary"/>
        </shape>
    </item>
</layer-list>