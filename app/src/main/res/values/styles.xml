<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textColorSecondary">@color/textSecondaryBlack</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:alertDialogTheme">@style/AppDialog</item>
    </style>

    <style name="AppThemeDark" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:textColorSecondary">@color/textSecondaryWhite</item>
        <item name="android:windowBackground">@color/colorBackgroundNight</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:alertDialogTheme">@style/AppDialogDark</item>
    </style>

    <style name="AppDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:textColorPrimary">@color/textBlack</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorAlertDialogListItem">@color/textBlack</item>
    </style>

    <style name="AppDialogDark" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:textColorPrimary">@color/textWhite</item>
        <item name="android:background">@color/colorPrimaryNight</item>
        <item name="textColorAlertDialogListItem">@color/textWhite</item>
    </style>

    <style name="ButtonNeutralStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_neutral_style</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="ButtonPositiveStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_positive_style</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="ButtonNegativeStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_negative_style</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="DialogButtonPositive" parent="ButtonPositiveStyle">
        <item name="android:background">@drawable/button_dialog_positive_style</item>
    </style>

    <style name="DialogButtonNegative" parent="ButtonNegativeStyle">
        <item name="android:background">@drawable/button_dialog_negative_style</item>
    </style>

    <style name="DialogButtonNeutral" parent="ButtonNeutralStyle">
        <item name="android:background">@drawable/button_dialog_neutral_style</item>
    </style>
</resources>
