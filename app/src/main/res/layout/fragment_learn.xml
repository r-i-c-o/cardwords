<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.ricode.kotlinwords.viewmodels.LearnViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_button_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:elevation="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_check"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/text_word"
                    android:text="@{vm.currentWord.title}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/text_transcribe"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="206dp"
                    tools:text="word"/>

                <TextView
                    android:id="@+id/text_transcribe"
                    android:text="@{vm.currentWord.transcription}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/text_translate"
                    app:layout_constraintTop_toBottomOf="@+id/text_word"
                    tools:layout_editor_absoluteX="0dp"
                    tools:text="translation"/>

                <TextView
                    android:id="@+id/text_translate"
                    android:text="@{vm.currentWord.translation}"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_transcribe"
                    tools:layout_editor_absoluteX="0dp"
                    tools:text="transcription transcription transcription" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/button_correct"

            android:text="@string/button_correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button_check"
            app:layout_constraintEnd_toStartOf="@+id/button_check"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="positive" />

        <Button
            android:id="@+id/button_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/text_words_left"
            app:layout_constraintEnd_toStartOf="@+id/button_incorrect"
            app:layout_constraintStart_toEndOf="@+id/button_correct"
            tools:text="show" />

        <Button
            android:id="@+id/button_incorrect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button_check"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_check"
            tools:text="negative" />

        <TextView
            android:id="@+id/text_words_left"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/button_check"
            app:layout_constraintStart_toStartOf="@+id/button_check"
            tools:text="Words left: int" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>